{
  "$jason": {
    "head": {
      "title": "Citizen Science",
      "description": "Citizen Science observation detailed view",
      "actions": {
        "$pull": {
          "trigger": "reload"
        },
        "$load": {
          "trigger": "reload"
        },
        "reload": {
          "type": "$network.request",
          "options": {
            "url": "https://my-json-server.typicode.com/stevecassidy/comp2110-api/observations"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Observation Information",
            "menu": {
              "text": "Profile",
              "style": {
                "color": "#0000ff",
                "font": "HelveticaNeue-Bold",
                "size": "17",
                "padding": "10"
              },
              "action": {
                "type": "$util.toast",
                "options": {
                  "text": "Coming soon!"
                }
              }
            }
          },
          "sections": {
            "{{#each $jason}}": {
              "items": [
                {
                  "type": "label",
                  "text": "Observation {{id+1}}",
                  "style": {
                    "font": "Courier-Bold",
                    "size": 20
                  }
                },
                {
                  "type": "vertical",
                  "components": [
                    {
                      "type": "label",
                      "text": "Location: {{location}}",
                      "style": {
                        "font": "Courier",
                        "size": 14
                      }
                    },
                    {
                      "type": "label",
                      "text": "Weather: {{weather}}",
                      "style": {
                        "font": "Courier",
                        "size": 14
                      }
                    },
                    {
                      "type": "label",
                      "text": "Read More",
                      "style": {
                        "font": "Courier",
                        "size": 14
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}
