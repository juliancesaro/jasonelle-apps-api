{
  "$jason": {
    "head": {
      "title": "Citizen Science",
      "description": "Citizen Science observation detailed view",
      "actions": {
        "$pull": {
          "trigger": "reload"
        },
        "$load": {
          "trigger": "reload"
        },
        "reload": {
          "type": "$network.request",
          "options": {
            "url": "https://my-json-server.typicode.com/stevecassidy/comp2110-api/observations"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Observation Details",
            "menu": {
              "text": "Profile",
              "style": {
                "color": "#0000ff",
                "font": "HelveticaNeue-Bold",
                "size": "17",
                "padding": "10"
              },
              "action": {
                "type": "$util.toast",
                "options": {
                  "text": "Coming soon..."
                }
              }
            }
          },
          "sections": {
            "items": [
              {
                "type": "label",
                "text": "Observation Details",
                "style": {
                  "font": "Courier-Bold",
                  "padding": 30,
                  "size": 20
                }
              }
            ]
          }
        }
      }
    }
  }
}
